{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "es6",
            "es2018"
        ],
        "noImplicitThis": true,
        "module": "commonjs",
        "outDir": "out",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        //"noUnusedParameters": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {"path": "./media"}   
    ]
}